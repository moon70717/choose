  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<select id="selectUserInfo" parameterType="ui" resultType="ui">
		select
		userNo,userName,ImageURL,Email
		from user
		where 1=1
		and userNo = #{userNo}
	
